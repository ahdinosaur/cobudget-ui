# @cjsx React.DOM

debug = require('debug')("cobudget-ui:budgets:views:select")
React = require('react')
_ = require('lodash')

FluxChildMixin = require('fluxxor').FluxChildMixin(React)

module.exports = React.createClass
  mixins: [FluxChildMixin]

  render: ->
    debug("render'ing", @props)

    budgetOptions = @props.budgets.map (budget) ->
      return (
        <option value={budget.id}>
          {budget.name}
        </option>
      )


    return (
      <select value={"Select Budget"}>
        {budgetOptions}
      </select>
    )

